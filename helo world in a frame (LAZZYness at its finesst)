*******************************************************************************/
public class Main
{
	public static void main(String[] args) {
	    String name []= new String[]{"*********","* Hello *", "* World *", "* in    *", "* a     *", "* frame *","*********"};
	    for(int i =0;i < name.length;i++){
	       System.out.println(name[i]);
	    }
	}
}


